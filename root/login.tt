[% page.layout	= 'modal' %]
[% page.modal	= 'authentication required' %]

<div id="page-top">
	<div id="page-bottom">
		<div>
			<div id="sidebar">
				<h2>[% host %]</h2>
				<ul>
					<li>
						This system is private and is intended for authorized
						users only. Unauthorized access or use is prohibited
						and may lead to prosecution under Section 2(d) of the
						Computer Fraud and Abuse Act of 1986 18 U.S.C.
						1030(a)(5)(A)(1988)
					</li>
				</ul>
			</div>

			<div id="content-min">
				<form id="login" method="post">
					<fieldset>
						<label>username:</label>
						<input type="text" name="username" value="[% c.req.params.username %]" />

						<br>

						<label>password:</label>
						<input type="password" name="password" />
					</fieldset>

					<hr />

					<fieldset>
						[% IF error %]
							<label class="error">[% error %]</label>
						[% END %]
						<input class="submit" type="submit" value="login" />
					</fieldset>
				</form>
			</div>

            <div style="clear: both;">&nbsp;</div>
		</div>
	</div>
</div>
